{
  "manifest_version": 3,
  "name": "No More Corporate Bullshit (LLM Edition)",
  "version": "0.2.0",
  "description": "Analyzes LinkedIn posts for logical fallacies and marketing bullshit using an LLM.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/feed/*", "*://*.linkedin.com/posts/*", "*://*.linkedin.com/pulse/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
